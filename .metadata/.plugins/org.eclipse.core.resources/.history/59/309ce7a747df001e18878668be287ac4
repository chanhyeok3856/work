<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>회원가입</title>
<script type="text/javascript">
function joinMember(){
	frm = document.join;
	if (!frm.username.value) {
		alert("이름을 입력하세요.")
		frm.username.focus(); return false;
	}
	if (!frm.gender[0].checked && !frm.gender[1].checked) {
		alert("성별을 선택해 주세요.");
		frm.gender[0].focus(); return false;		
	}
if (frm.job.selectedIndex < 1) {
	alert("직업을 선택해 주세요.");
	frm.job.focus(); return false;
}
chk = false;
for ( i = 0; i < frm.hobby.length; i++) {
	if (frm.hobby[i].checked) {
		chk=true;
		break;
	}
	
}
if (!chk) {
	alert("취미를 선택해 주세요")
	frm.hobby[0].focus); return false;
}
if (confirm("회원 가입을 하시겠습니까?")) {
	frm.submit();
}
}
</script>
</head>
<body>

</body>
</html>