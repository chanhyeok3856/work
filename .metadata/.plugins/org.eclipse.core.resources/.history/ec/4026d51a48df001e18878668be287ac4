<meta charset="UTF-8">
<title>회원가입</title>
<script type="text/javascript">
function joinMember(){
	frm = document.join;
	if (!frm.username.value) {
		alert("이름을 입력하세요.")
		frm.username.focus(); return false;
	}
	if (!frm.gender[0].checked && !frm.gender[1].checked) {
		alert("성별을 선택해 주세요.");
		frm.gender[0].focus(); return false;		
	}
if (frm.job.selectedIndex < 1) {
	alert("직업을 선택해 주세요.");
	frm.job.focus(); return false;
}
chk = false;
for ( i = 0; i < frm.hobby.length; i++) {
	if (frm.hobby[i].checked) {
		chk=true;
		break;
	}
	
}
if (!chk) {
	alert("취미를 선택해 주세요")
	frm.hobby[0].focus); return false;
}
if (confirm("회원 가입을 하시겠습니까?")) {
	frm.submit();
}
}
</script>
</head>
<body>
<form name = "join" action="#" method="get">
<fieldset>
<legend>회원가입</legend>
<p>
<label for = "username">이름</label>
<input type = "text" name = "username" id = "username">
</p>
<p>
<label for = "gender">성별</label>
<input type = "radio" name="gender" id ="gender" value="M">남자
<input type = "radio" name ="gender"id ="gender" value="F">여자
</p>
<p>
<label for=job>직업</label>
<select name = "job" id = "job">
<option>-----선택하세요-----</option>
<option value="dev"> 웹 프로그래머 </option>
<option value = "pub"> 웹 퍼블리셔 </option>

</select>
</p>
<p>
<label for = "hobby"> 취미</label>
<input type = "checkbox" value = "축구" name = "hobby" id = "hobby ">축구
<input type = "checkbox" value = "축구" name = "hobby" id = "hobby ">야구
<input type = "checkbox" value = "축구" name = "hobby" id = "hobby ">농구
</p>
<p>
<button type ="button" onclick ="joinMemeber()">회원가입</button>
